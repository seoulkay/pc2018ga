	i.id
	,i.trip_id
	,i.stmp
	,i.`desc`
	,i.desc_local
	,e.first_name
	,e.last_name
	,ev.event_name
	FROM tis.iti i 
	left join tis.trip t on t.id = i.trip_id
	left join tis.employee e on e.id = t.emp_id
	left join tis.`event` ev on ev.id = t.event_id
	WHERE i.id = #{param}
