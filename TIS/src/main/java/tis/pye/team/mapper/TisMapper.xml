  	<select id="selectAccomByAtosId" resultType="TisAccom" parameterType="TisEmployee">
  	SELECT 
	a.id
	,a.employee_id
	,a.venue_id
	,a.event_id
	,a.acc_room
	,a.acc_begin
	,a.acc_end
	,a.acc_pin
	,a.acc_desc
	,a.acc_fac
	,a.acc_pol
	,v.venue_pic
	,v.venue_name
	,v.venue_name_loc
	,v.venue_address
	,v.venue_address_loc
	,v.venue_desc
	FROM tis.accom a left join tis.venue v on a.venue_id = v.id 
	where a.event_id = #{event_id} 
	and a.employee_id = #{id};
  	</select>
